<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_config.form.type.config.name">black_config_config</parameter>
        <parameter key="black_config.form.type.config.class">Black\Bundle\ConfigBundle\Form\Type\ConfigType</parameter>
        <parameter key="black_config.form.handler.config.class">Black\Bundle\ConfigBundle\Form\Type\ConfigHandler</parameter>
    </parameters>

    <services>
        <service id="black_config.form.config" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%black_config.form.type.config.name%</argument>
            <argument type="service" id="black_config.form.type.config" />
            <argument>null</argument>
        </service>

        <service id="black_config.form.type.config" class="%black_config.form.type.config.class%">
            <argument>%black_config.config.model.class%</argument>
            <argument type="service" id="black_common.form.event.button.save" />
            <tag name="form.type" alias="black_config_config" />
        </service>

        <service id="black_config.config.form.main.handler" class="%black_config.form.handler.config.class%" scope="request" public="true">
            <argument type="service" id="black_config.form.config" />
        </service>
    </services>
</container>
