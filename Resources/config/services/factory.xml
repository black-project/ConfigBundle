<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_config.factory.create_property.class">Black\Bundle\ConfigBundle\Factory\CreateProperty</parameter>
    </parameters>

    <services>
        <!-- Exposed services -->
        <service id="black_config.factory.property" alias="black_config.factory.create_property" />

        <!-- Concrete implementations -->
        <service id="black_config.factory.create_property" class="%black_config.factory.create_property.class%">
            <argument type="service" id="black_config.manager.config" />
        </service>

    </services>

</container>
